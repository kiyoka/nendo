(define-syntax guard
  (syntax-rules ()
    ((guard)
     (error "guard requires (guard (var (clauses-like-cond)) body ...)"))
    ((guard var-clauses)
     (error "guard requires (guard (var (clauses-like-cond)) body ...)"))
    ((guard var-clauses body ...)
     (%guard
      (%guard-var
       var-clauses)
      (%guard-clause
       var-clauses)
      body ...))))


