(define-syntax %guard-var
  (syntax-rules (=> ...)
    ((%guard-clause (var clauses ...))
     var)))

(define-syntax %guard-clause
  (syntax-rules (=> ...)
    ((%guard-clause (var clauses ...))
     (case var
       clauses ...))))
    
(macroexpand-1
 (quote
  (%guard-var (exc
               (else (print "ELSE"))))))

