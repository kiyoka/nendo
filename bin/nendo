require 'nendo'
require 'getoptlong'

def main
  loadInit = true
  core = Nendo.new()

  opts = GetoptLong.new(
                        [ '--help',          '-h', GetoptLong::NO_ARGUMENT ],
                        [ '--no-init-file',  '-q', GetoptLong::NO_ARGUMENT ],
                        [ '--load',          '-l', GetoptLong::REQUIRED_ARGUMENT ]
                        ).each { |opt, arg|
    case opt
    when '--help'
      puts <<-EOF
      
      nendo [OPTION] [script-file]

      -h, --help:
        show help

      -q, --no-init-file:
        Does not read the default initialization file.

      -l, --load:
        Does not read the default initialization file.

      EOF
    when '--no-init-file'
      loadInit = false
    when '--load'
      core.load( arg )
      STDERR.printf( "loaded file [%s]\n", arg )
    end
  }
  
  if loadInit
    core.loadInitFile
  end
  if 0 < ARGV.length
    core.load( ARGV[0] )
  else
    core.repl
  end
end

main
