#!/usr/bin/env ruby
#
# Nendo:   "Principle of Least Surprise (for Rubyist)"
#  
#
#
require 'nendo'

def main
  if "-t" == ARGV[0] 
    testSequence
  elsif 0 < ARGV.length
    core = Nendo.new( STDIN )
    core.loadFile( ARGV[0] )
  else
    core = Nendo.new( STDIN )
    while true
      core.repl
    end
  end
end

main
