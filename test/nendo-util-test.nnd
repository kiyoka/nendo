(test-section "Enumerable on srfi-1")
(use srfi-1)

(test* "map (for vector)"
       '#("[a]" "[b]" "[C]")
       (map
        wrap-str
        '#("a" "b" "C")))

(test* "map (for Range)"
       '#(10 11 12)
       (map
        (lambda (x) x)
        (Range.new 10 12)))

(test* "map (for Enumerator)"
       '#("[one]" "[two]" "[three]")
       (map
        wrap-str
        (Enumerator.new
         (&block (v)
           (v.yield "one")
           (v.yield "two")
           (v.yield "three")))))
           

(test* "for-each (for vector)"
       '("[a]" "[b]" "[C]")
       (let1 result '()
         (for-each
          (lambda (x) (set! result
                            (cons (wrap-str x) result)))
          '#("a" "b" "C"))
         (reverse result)))

(test* "for-each (for Range)"
       '(10 11 12)
       (let1 result '()
         (for-each
          (lambda (x) (set! result
                            (cons x result)))
          (Range.new 10 12))
         (reverse result)))

(test* "for-each (for Enumerable)"
       '("[one]" "[two]" "[three]")
       (let1 result '()
         (for-each
          (lambda (x) (set! result
                            (cons (wrap-str x) result)))
          (Enumerator.new
           (&block (v)
             (v.yield "one")
             (v.yield "two")
             (v.yield "three"))))
         (reverse result)))

(test* "filter (for vector)"
       '#("b")
       (filter
        (lambda (x) (= "b" x))
        '#("a" "b" "C")))

(test* "filter (for Range)"
       '#(11)
       (filter
        (lambda (x) (= 11 x))
        (Range.new 10 1000)))

(test* "filter (for Enumerable)"
       '#("one" "three")
       (filter
        (lambda (x) (not (= "two" x)))
        (Enumerator.new
         (&block (v)
           (v.yield "one")
           (v.yield "two")
           (v.yield "three")))))
        


