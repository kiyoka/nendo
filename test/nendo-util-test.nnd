(test-section "filter for Enumerable")

(test* "filter-pable? no"
       #f
       (%%filter-able?
        (lambda (x) x)
        ' (1 2)))

(test* "filter-pable? yes"
       #t
       (%%filter-able?
        (lambda (x) x)
        '#(1 2)))

(test* "filter-pable? yes"
       #t
       (%%filter-able?
        (lambda (x) x)
        (Range.new 0 100)))

(test* "filter-pable? yes"
       #t
       (%%filter-able?
        (lambda (x) x)
        (hash-table eq? '("a" 1) '("b" 2))))

(test* "%%filter"
       '#("b")
       (%%filter
        (lambda (x) (= "b" x))
        '#("a" "b" "C")))

(test* "%filter (for vector)"
       '#("b")
       (%filter
        (lambda (x) (= "b" x))
        '#("a" "b" "C")))

(test* "filter (for vector1)"
       '#("b")
       (filter
        (lambda (x) (= "b" x))
        '#("a" "b" "C")))

(test* "filter (for vector2)"
       '#("a" "C")
       (filter
        (lambda (x) (not (= "b" x)))
        '#("a" "b" "C")))

(test* "filter (for list)"
       '("C")
       (filter
        (lambda (x) (= "C" x))
        '("a" "b" "C")))


